  requests     inventory_requests? @relation(fields: [request_id], references: [id], onDelete: SetNull)
  users_issued users?              @relation("inventory_issues_issued_by", fields: [issued_by], references: [id], onDelete: SetNull)

  @@index([issued_at], map: "idx_inventory_issues_issued_at")
  @@index([work_order_id], map: "idx_inventory_issues_work_order_id")
  @@index([warehouse_id], map: "idx_inventory_issues_warehouse_id")
  @@index([request_id], map: "idx_inventory_issues_request_id")
  @@index([status], map: "idx_inventory_issues_status")
  @@map("inventory_issues")
}

